{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": ".",
        "outDir": "../dist/server",
        "typeRoots": [
            "../node_modules/@types/"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}