{
    "name": "nodejs-ts-boilerplate",
    "version": "1.0.0",
    "description": "A simple nodejs project with all necessary dependencies to use Typescript with NodeJS",
    "scripts": {
        "build": "npm run clean:dist && npm run build-ts && npm run tslint && npm run copy-www",
        "build-ts": "npm run tsc ./server/tsconfig.json",
        "clean:dist": "rimraf dist",
        "copy-www": "ts-node ./server/copy-www.ts",
        "debug": "npm run build && npm run serve-debug",
        "serve": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/server/bin/www.js",
        "serve-debug": "node --inspect=0.0.0.0:9229 --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/server/bin/www.js",
        "start": "npm run build && npm run serve",
        "tslint": "tslint -c ./server/tslint.json -p ./server/tsconfig.json",
        "tsc": "./node_modules/.bin/tsc --build"
    },
    "author": "Giorgio Federici",
    "license": "ISC",
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.7",
        "@types/chai-http": "^3.0.5",
        "@types/cors": "^2.8.4",
        "@types/dotenv": "^6.1.0",
        "@types/errorhandler": "0.0.32",
        "@types/expect": "^1.20.4",
        "@types/express": "^4.16.1",
        "@types/mongodb": "^3.1.20",
        "@types/mongoose": "^5.3.20",
        "@types/morgan": "^1.7.35",
        "@types/node": "^11.10.4",
        "@types/shelljs": "^0.8.3",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "codelyzer": "^4.5.0",
        "del": "^4.0.0",
        "dotenv": "^7.0.0",
        "gulp": "^4.0.0",
        "gulp-mocha": "^6.0.0",
        "gulp-sourcemaps": "^2.6.5",
        "gulp-typescript": "^5.0.0",
        "mocha": "^6.1.4",
        "mocha-typescript": "^1.1.17",
        "protractor": "^5.4.2",
        "shelljs": "^0.8.3",
        "ts-node": "^8.0.2",
        "tslint": "^5.13.1",
        "typescript": "~3.2.2"
    },
    "dependencies": {
        "bluebird": "^3.5.3",
        "body-parser": "^1.18.3",
        "cors": "^2.8.5",
        "errorhandler": "^1.5.0",
        "express": "^4.16.4",
        "mongoose": "^5.4.17",
        "morgan": "^1.9.1",
        "winston": "^3.2.1"
    }
}
